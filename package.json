{
  "name": "zerot",
  "version": "1.0.0",
  "description": "Zero-trust architecture framework with decorator-based contract programming for AI-friendly development",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "docs": "typedoc src/index.ts",
    "test": "vitest",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "cli": "npx tsx src/cli/index.ts",
    "dev": "tsc --watch"
  },
  "bin": {
    "zerot": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core/*": "./dist/core/*.js",
    "./conditions/*": "./dist/conditions/*.js",
    "./templates/*": "./dist/templates/*.js",
    "./integrations/nextjs": "./dist/integrations/nextjs.js"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "chalk": "^5.0.0",
    "fs-extra": "^11.0.0",
    "jsdom": "^26.1.0",
    "next": "^15.4.6",
    "typedoc": "^0.28.10",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "zod": "^3.22.0"
  },
  "keywords": [
    "nextjs",
    "security",
    "contracts",
    "ai-friendly",
    "zero-trust"
  ],
  "license": "MIT",
  "author": "metaclosure <metaclosure@gmail.com>"
}
